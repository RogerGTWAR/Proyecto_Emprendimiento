generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model comments {
  id             Int        @id @default(autoincrement())
  user_id        Int
  content        String
  parent_id      Int?
  deleted_at     DateTime?  @db.Timestamp(6)
  comments       comments?  @relation("commentsTocomments", fields: [parent_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  other_comments comments[] @relation("commentsTocomments")
  users          users      @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  likes          likes[]
}

model companies {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  type        String        @db.VarChar(255)
  user_id     Int           @unique
  deleted_at  DateTime?     @db.Timestamp(6)
  users       users         @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  departments departments[]
  materials   materials[]
  processes   processes[]
  products    products[]
}

model departments {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  description String?
  company_id  Int
  deleted_at  DateTime? @db.Timestamp(6)
  companies   companies @relation(fields: [company_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  workers     workers[]
}

model likes {
  id         Int       @id @default(autoincrement())
  user_id    Int
  comment_id Int
  deleted_at DateTime? @db.Timestamp(6)
  comments   comments  @relation(fields: [comment_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model material_tag {
  id          Int       @id @default(autoincrement())
  material_id Int
  tag_id      Int
  deleted_at  DateTime? @db.Timestamp(6)
  materials   materials @relation(fields: [material_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tags        tags      @relation(fields: [tag_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model material_units {
  id         Int         @id @default(autoincrement())
  unit_name  String      @db.VarChar(20)
  deleted_at DateTime?   @db.Timestamp(6)
  materials  materials[]
}

model materials {
  id               Int       @id @default(autoincrement())
  name             String
  description      String?
  waste_percentage Decimal
  unit_cost        Decimal
  material_img     String?
  company_id       Int
  material_unit_id Int
  deleted_at       DateTime?
  quantity         Int       @default(0)
  measurements     String?   
  size             String?
  type             String? 
  material_tag     material_tag[]
  companies        companies          @relation(fields: [company_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  material_units   material_units     @relation(fields: [material_unit_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  product_material product_material[]
}


model process_service {
  id         Int       @id @default(autoincrement())
  process_id Int
  service_id Int
  cost_service Decimal     
  deleted_at DateTime? @db.Timestamp(6)
  processes  processes @relation(fields: [process_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  services   services  @relation(fields: [service_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model process_worker {
  id         Int       @id @default(autoincrement())
  process_id Int
  worker_id  Int
  cost_labor Decimal    
  deleted_at DateTime? @db.Timestamp(6)
  processes  processes @relation(fields: [process_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  workers    workers   @relation(fields: [worker_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model processes {
  id              Int               @id @default(autoincrement())
  name            String            @db.VarChar(255)
  quantity        Int
  product_id      Int
  company_id      Int
  duration_total_minutes Int             
  cost_total      Decimal   
  deleted_at      DateTime?         @db.Timestamp(6)
  process_service process_service[]
  process_worker  process_worker[]
  companies       companies         @relation(fields: [company_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products        products          @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model product_material {
  id          Int       @id @default(autoincrement())
  product_id  Int
  material_id Int
  quantity    Int       @db.SmallInt
  deleted_at  DateTime? @db.Timestamp(6)
  cost        Decimal   @db.Decimal(12, 2) @default(0) 
  materials   materials @relation(fields: [material_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products    products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model product_tag {
  id         Int       @id @default(autoincrement())
  product_id Int
  tag_id     Int
  deleted_at DateTime? @db.Timestamp(6)
  products   products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tags       tags      @relation(fields: [tag_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model products {
  id               Int                @id @default(autoincrement())
  name             String             @db.VarChar(255)
  estimated_time   Int
  description      String?
  profit_margin    Decimal            @db.Decimal
  product_img      String?            @db.VarChar(255)
  total_cost       Decimal            @db.Decimal(12, 2) @default(0)
  company_id       Int
  deleted_at       DateTime?          @db.Timestamp(6)
  processes        processes[]
  product_material product_material[]
  product_tag      product_tag[]
  companies        companies          @relation(fields: [company_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  ratings          ratings[]
  wishlist         wishlist[]
}

model ratings {
  id         Int       @id @default(autoincrement())
  user_id    Int
  product_id Int
  stars      Int       @db.SmallInt
  deleted_at DateTime? @db.Timestamp(6)
  products   products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model services {
  id              Int               @id @default(autoincrement())
  name            String            @db.VarChar(255)
  cost            Decimal           @db.Decimal
  deleted_at      DateTime?         @db.Timestamp(6)
  process_service process_service[]
}

model tags {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(255)
  deleted_at   DateTime?      @db.Timestamp(6)
  material_tag material_tag[]
  product_tag  product_tag[]
}

model users {
  id           Int        @id @default(autoincrement())
  email        String     @unique @db.VarChar(255)
  password     String?    @db.VarChar(255)
  is_owner     Boolean?   @default(false)
  google_oauth Boolean?   @default(false)
  is_verified  Boolean?   @default(false)
  deleted_at   DateTime?  @db.Timestamp(6)
  comments     comments[]
  companies    companies?
  likes        likes[]
  ratings      ratings[]
  wishlist     wishlist[]
}

model wishlist {
  id         Int       @id @default(autoincrement())
  user_id    Int
  product_id Int
  deleted_at DateTime? @db.Timestamp(6)
  products   products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model workers {
  id             Int              @id @default(autoincrement())
  firstname      String           @db.VarChar(255)
  lastname       String           @db.VarChar(255)
  hourly_fee     Decimal          @db.Decimal
  department_id  Int
  deleted_at     DateTime?        @db.Timestamp(6)
  process_worker process_worker[]
  departments    departments      @relation(fields: [department_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum picturable_items {
  product
  material
}
